<div id="grid" class="table table-striped table-hover"></div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            $("#grid").kendoGrid({
                dataSource: {
                    type: "json",
                    transport: {
                        read: "/Profile/LeaderboardData"
                    },
                    schema: {
                        model: {
                            fields: {
                                Name: { type: "string" },
                                Level: { type: "number" }
                            }
                        }
                    },
                    pageSize: 20,
                    serverPaging: false,
                    serverFiltering: false,
                    serverSorting: false
                },
                height:430,
                columns: [{
                    field:"Name"},
                    {field:"Level"}
                ]
            });
        });

        var hub = $.connection.profileHub;
        hub.client.updateBoard = function (profile) {
            updateLeaderboard(profile);
        };
        $.connection.hub.start();

        function updateLeaderboard(profile) {
